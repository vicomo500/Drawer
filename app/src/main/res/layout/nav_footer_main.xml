<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_med"
    android:paddingEnd="@dimen/margin_extra_min"
    android:paddingVertical="@dimen/content_padding"
    >

    <TextView
        android:id="@+id/call_text"
        style="@style/ClickableTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:text="@string/call_msg"
        app:drawableStartCompat="@drawable/ic_call_20"
        android:drawablePadding="@dimen/margin_min"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:scaleType="fitStart"
        android:layout_marginTop="@dimen/margin_min"
        android:src="@drawable/logo"
        android:contentDescription="@string/ringier_logo"
        />
</LinearLayout>